<%- include("partials/header", { title: title }) %>

<h1>Projects</h1>

<% if (session.success) { %>
  <p style="background: #c4f7c4; padding: 8px; border-radius: 5px;">
    <%= session.success %>
  </p>
  <% session.success = null; %>
<% } %>

<% if (projects.length === 0) { %>
  <p>No projects yet.</p>
<% } else { %>
  <ul>
    <% projects.forEach(project => { %>
      <li>
        <strong><%= project.title %></strong> â€” <%= project.description %>
        <% if (session.loggedIn) { %>
          <form action="/projects/delete" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="<%= project.id %>">
            <button type="submit">ğŸ—‘ï¸ Delete</button>
          </form>
        <% } %>
      </li>
    <% }) %>
  </ul>
<% } %>

<% if (session.loggedIn) { %>
  <a href="/projects/new" class="btn">â• Create new project</a>
<% } %>

